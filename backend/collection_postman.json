            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"cliente@correo.com\",\n  \"password\": \"secreta123\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Me (Perfil actual)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
